# Chrome Browser Engine - Production Environment Configuration

# Application Settings
APP_NAME=chrome-browser-engine
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=false
APP_LOG_LEVEL=info

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=4
SERVER_TIMEOUT=30

# Security Settings
SECURITY_SANDBOX=true
SECURITY_CSP=true
SECURITY_HTTPS_ONLY=true
SECURITY_COOKIE_SECURE=true
SECURITY_COOKIE_HTTPONLY=true
SECURITY_COOKIE_SAMESITE=strict

# Performance Settings
PERFORMANCE_CACHE=true
PERFORMANCE_CACHE_TTL=3600
PERFORMANCE_COMPRESSION=true
PERFORMANCE_GZIP_LEVEL=6
PERFORMANCE_MAX_CONNECTIONS=1000

# Memory Settings
MEMORY_MAX_HEAP=2GB
MEMORY_GC_THRESHOLD=80
MEMORY_GC_INTERVAL=30

# Network Settings
NETWORK_TIMEOUT=30
NETWORK_RETRIES=3
NETWORK_KEEPALIVE=true
NETWORK_MAX_REDIRECTS=10

# Cache Settings
CACHE_ENABLED=true
CACHE_SIZE=1GB
CACHE_TTL=3600
CACHE_CLEANUP_INTERVAL=300

# Database Settings (if needed)
DATABASE_URL=sqlite:///data/browser.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# Logging Settings
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/chrome-browser-engine/app.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Monitoring Settings
MONITORING_ENABLED=true
MONITORING_METRICS=true
MONITORING_HEALTH_CHECK=true
MONITORING_PROMETHEUS_PORT=9090

# Cloud Provider Settings
CLOUD_PROVIDER=aws
AWS_REGION=us-east-1
AWS_S3_BUCKET=chrome-browser-engine
GCP_PROJECT=chrome-browser-engine
AZURE_RESOURCE_GROUP=chrome-browser-engine

# Feature Flags
FEATURE_WEBGL=true
FEATURE_WEBASSEMBLY=true
FEATURE_SERVICE_WORKERS=false
FEATURE_WEBRTC=false
FEATURE_WEB_AUDIO=false

# Experimental Features
EXPERIMENTAL_MULTI_THREADING=true
EXPERIMENTAL_GPU_ACCELERATION=true
EXPERIMENTAL_JIT_COMPILATION=false

# Development Settings (disabled in production)
DEV_HOT_RELOAD=false
DEV_DEBUG_TOOLS=false
DEV_PROFILING=false
