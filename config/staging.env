# Chrome Browser Engine - Staging Environment Configuration

# Application Settings
APP_NAME=chrome-browser-engine
APP_VERSION=1.0.0-staging
APP_ENV=staging
APP_DEBUG=true
APP_LOG_LEVEL=debug

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_WORKERS=2
SERVER_TIMEOUT=30

# Security Settings
SECURITY_SANDBOX=true
SECURITY_CSP=true
SECURITY_HTTPS_ONLY=false
SECURITY_COOKIE_SECURE=false
SECURITY_COOKIE_HTTPONLY=true
SECURITY_COOKIE_SAMESITE=lax

# Performance Settings
PERFORMANCE_CACHE=true
PERFORMANCE_CACHE_TTL=1800
PERFORMANCE_COMPRESSION=true
PERFORMANCE_GZIP_LEVEL=4
PERFORMANCE_MAX_CONNECTIONS=500

# Memory Settings
MEMORY_MAX_HEAP=1GB
MEMORY_GC_THRESHOLD=70
MEMORY_GC_INTERVAL=20

# Network Settings
NETWORK_TIMEOUT=30
NETWORK_RETRIES=3
NETWORK_KEEPALIVE=true
NETWORK_MAX_REDIRECTS=10

# Cache Settings
CACHE_ENABLED=true
CACHE_SIZE=512MB
CACHE_TTL=1800
CACHE_CLEANUP_INTERVAL=300

# Database Settings
DATABASE_URL=sqlite:///data/browser-staging.db
DATABASE_POOL_SIZE=5
DATABASE_TIMEOUT=30

# Logging Settings
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE=/var/log/chrome-browser-engine/staging.log
LOG_MAX_SIZE=50MB
LOG_MAX_FILES=5

# Monitoring Settings
MONITORING_ENABLED=true
MONITORING_METRICS=true
MONITORING_HEALTH_CHECK=true
MONITORING_PROMETHEUS_PORT=9091

# Feature Flags
FEATURE_WEBGL=true
FEATURE_WEBASSEMBLY=true
FEATURE_SERVICE_WORKERS=true
FEATURE_WEBRTC=true
FEATURE_WEB_AUDIO=true

# Experimental Features
EXPERIMENTAL_MULTI_THREADING=true
EXPERIMENTAL_GPU_ACCELERATION=true
EXPERIMENTAL_JIT_COMPILATION=true

# Development Settings
DEV_HOT_RELOAD=true
DEV_DEBUG_TOOLS=true
DEV_PROFILING=true
